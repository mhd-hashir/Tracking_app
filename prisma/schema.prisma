// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   // Hashed
  role      String   // ADMIN, OWNER, EMPLOYEE
  ownedDomain String? // Custom domain for this owner (e.g., "company.com")
  
  // Relations
  ownerId   String?  // If user is Employee, this links to their Owner
  owner     User?    @relation("OwnerEmployees", fields: [ownerId], references: [id], onDelete: Cascade)
  employees User[]   @relation("OwnerEmployees") // If user is Owner, list of employees

  assignedRoutes Route[] @relation("AssignedRoutes")

  shops     Shop[]
  routes    Route[]
  collections Collection[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Live Tracking
  lastLatitude  Float?
  lastLongitude Float?
  lastLocationUpdate DateTime?
  
  locationHistory LocationHistory[]
}

model LocationHistory {
  id        String   @id @default(cuid())
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())
  
  employeeId String
  employee   User     @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Shop {
  id        String   @id @default(cuid())
  name      String
  address   String?
  latitude  Float?
  longitude Float?
  dueAmount Float    @default(0)
  geofenceRadius Int @default(500) // Safe zone in meters
  mobile    String?  // Contact number
  
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  routeStops RouteStop[]
  collections Collection[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Route {
  id        String   @id @default(cuid())
  name      String
  dayOfWeek String   // MONDAY, TUESDAY, etc.
  
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  assignedToId String?
  assignedTo   User?    @relation("AssignedRoutes", fields: [assignedToId], references: [id], onDelete: SetNull)

  stops     RouteStop[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RouteStop {
  id        String   @id @default(cuid())
  order     Int
  
  routeId   String
  route     Route    @relation(fields: [routeId], references: [id], onDelete: Cascade)
  
  shopId    String
  shop      Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Collection {
  id          String   @id @default(cuid())
  amount      Float
  paymentMode String   // CASH, UPI, CHECK, BANK_TRANSFER
  remarks     String?
  
  // Location of collection
  latitude    Float?
  longitude   Float?
  
  shopId      String
  shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  
  employeeId  String
  employee    User     @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  collectedAt DateTime @default(now())
}

model GlobalSettings {
  id            String   @id @default(cuid())
  defaultDomain String   @default("fieldtrack.com") // e.g., "mycompany.com"
  updatedAt     DateTime @updatedAt
}

model ImportBatch {
  id        String   @id @default(cuid())
  ownerId   String
  createdAt DateTime @default(now())
  
  createdCount Int
  updatedCount Int
  
  // JSON blob to store revert instructions
  // Structure: { createdShopIds: string[], originalShops: Partial<Shop>[] }
  revertData Json 

  @@index([ownerId])
}
